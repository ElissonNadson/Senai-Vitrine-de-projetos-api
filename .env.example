# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=86400

# PostgreSQL
HOST=localhost
DB_PORT=5432
DATABASE=vitrine_projetos
USERNAME=postgres
PASSWORD=your-postgres-password

# Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE_MB=10

# Server
PORT=3000
NODE_ENV=development

# Frontend URL (usada em redirecionamentos OAuth e notificações)
FRONTEND_URL=http://localhost:5173

# Redis (BullMQ - já configurado)
REDIS_HOST=localhost
REDIS_PORT=6379

# CORS (múltiplas origens separadas por vírgula)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Email / RabbitMQ
# Habilita publicação e consumo de e-mails via RabbitMQ
SEND_EMAIL_NOTIFICATIONS=false

# URL de conexão do RabbitMQ (compose recomendado abaixo)
RABBITMQ_URL=amqp://localhost:5672

# Nome da fila de e-mails
EMAIL_QUEUE_NAME=email_queue

# Configuração SMTP para envio de e-mails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
# "true" para TLS (porta 465 normalmente), "false" para STARTTLS (587)
SMTP_SECURE=false

# Remetente padrão
EMAIL_FROM=nao-responder@example.com
